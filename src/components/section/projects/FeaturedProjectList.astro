---
import { getEntry } from "astro:content";
import ProjectCard from "./ProjectCard.astro";
const projectCollection = await getEntry("projects", "projects");
const feauturedProjects = projectCollection?.data
  .filter((proj) => proj.featured === true)
  .slice(0, 3);
---

<article class="mb-6 grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3">
  {
    feauturedProjects?.map((proj) => {
      return (
        <ProjectCard
          imgUrl={proj.img.src}
          imgAlt={proj.img.alt}
          title={proj.title}
          descrition={proj.description}
          url={proj.url}
          tag={proj.tag}
        />
      );
    })
  }
</article>
