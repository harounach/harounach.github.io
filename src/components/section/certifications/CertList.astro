---
import { getEntry } from "astro:content";
import CertCard from "./CertCard.astro";
const certCollection = await getEntry("certifications", "certifications");
---

<article class="cert-list">
  {
    certCollection.data.map((cert) => {
      return (
        <CertCard title={cert.title} issuer={cert.issuer} url={cert.url} />
      );
    })
  }
</article>
