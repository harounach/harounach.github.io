---
interface Props {
  className?: string;
}

import FacebookIcon from "@components/icons/FacebookIcon.astro";
import SocialIcon from "./SocialIcon.astro";
import InstagramIcon from "@components/icons/InstagramIcon.astro";
import TwitterXIcon from "@components/icons/TwitterXIcon.astro";
import LinkedInIcon from "@components/icons/LinkedInIcon.astro";
import PinterestIcon from "@components/icons/PinterestIcon.astro";
import GithubIcon from "@components/icons/GithubIcon.astro";
import YouTubeIcon from "@components/icons/YouTubeIcon.astro";

const { className } = Astro.props;
---

<ul class:list={["flex flex-wrap gap-3", className]}>
  <!-- Facebook -->
  <SocialIcon
    url="https://www.facebook.com/haroun.achouche.me"
    title="Facebook"
  >
    <FacebookIcon />
  </SocialIcon>

  <!-- Instagram -->
  <SocialIcon url="https://www.instagram.com/harounachouche/" title="Instagram">
    <InstagramIcon />
  </SocialIcon>

  <!-- Twitter-X -->
  <SocialIcon url="https://x.com/harounachouche" title="Twitter-X">
    <TwitterXIcon />
  </SocialIcon>

  <!-- LinkedIn -->
  <SocialIcon
    url="https://www.linkedin.com/in/haroun-achouche/"
    title="LinkedIn"
  >
    <LinkedInIcon />
  </SocialIcon>

  <!-- Pinterest -->
  <SocialIcon url="https://www.pinterest.com/harounachouche/" title="Pinterest">
    <PinterestIcon />
  </SocialIcon>

  <!-- Github -->
  <SocialIcon url="https://github.com/harounach" title="Github">
    <GithubIcon />
  </SocialIcon>

  <!-- YouTube -->
  <SocialIcon url="https://www.youtube.com/@harounach" title="YouTube">
    <YouTubeIcon />
  </SocialIcon>
</ul>
