---
interface Props {
  className?: string;
}

import SocialIcon from "./SocialIcon.astro";
import InstagramIcon from "@components/icons/instagram.svg";
import TwitterXIcon from "@components/icons/twitter-x.svg";
import YouTubeIcon from "@components/icons/youtube.svg";
import Threads from "@components/icons/threads.svg";
import LinktreeIcon from "@components/icons/LinktreeIcon.astro";

const { className } = Astro.props;
---

<ul class:list={["flex flex-wrap gap-3", className]}>
  <!-- Instagram -->
  <SocialIcon url="https://www.instagram.com/harounachouche/" title="Instagram">
    <InstagramIcon width={24} height={24} />
  </SocialIcon>

  <!-- Threads -->
  <SocialIcon url="https://www.threads.net/@harounachouche" title="Threads">
    <Threads width={24} height={24} />
  </SocialIcon>

  <!-- Twitter-X -->
  <SocialIcon url="https://x.com/harounachouche" title="Twitter-X">
    <TwitterXIcon width={24} height={24} />
  </SocialIcon>

  <!-- YouTube -->
  <SocialIcon url="https://www.youtube.com/@harounach" title="YouTube">
    <YouTubeIcon width={24} height={24} />
  </SocialIcon>

  <!-- LinkTree -->
  <SocialIcon url="https://linktr.ee/harounachouche" title="LinkTree">
    <LinktreeIcon />
  </SocialIcon>
</ul>
