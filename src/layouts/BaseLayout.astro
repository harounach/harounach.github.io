---
import "../styles/main.scss";
import Header from "@components/header/Header.astro";
import Footer from "@components/footer/Footer.astro";
import BackButton from "@components/actionable/BackButton.astro";
const { pageTitle, metaDescription, metaKeyWords } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg" />
    <meta name="description" content={metaDescription} />
    <meta name="keywords" content={metaKeyWords} />
    <meta property="og:url" content="https://harounach.github.io/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Haroun Achouche Portfolio" />
    <meta
      property="og:description"
      content="Haroun Achouche portfolio, skills, eductaion, experience, certification, and projects"
    />
    <meta
      property="og:image"
      content="https://harounach.github.io/images/harounach.jpg"
    />
    <meta property="og:image:alt" content="Haroun Achouche Photo" />
    <!-- Google Search Verification -->
    <meta
      name="google-site-verification"
      content="Amwbrym6ZnvrBN13LXGtYnvYW4JsJmJS0Tgnd0av2g8"
    />
    <!-- Google Analytics -->
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-4H0Y22DZQ1"
    ></script>
    <script>
      //@ts-ignore
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        //@ts-ignore
        dataLayer.push(arguments);
      }
      //@ts-ignore
      gtag("js", new Date());
      //@ts-ignore
      gtag("config", "G-4H0Y22DZQ1");
    </script>
    <!-- Site name -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Haroun Achouche",
        "url": "https://harounach.github.io/"
      }
    </script>
    <!-- Pinterest Verification -->
    <meta name="p:domain_verify" content="ab57ae76b4053f945710fea74a3337ca" />
    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
    <BackButton />

    <!-- App.js -->
    <script src="../scripts/app.js"></script>
  </body>
</html>
