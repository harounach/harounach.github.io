---
import "../styles/main.scss";
import Header from "@components/header/Header.astro";
import BackButton from "@components/actionable/BackButton.astro";
const { pageTitle, mainClass, metaDescription, metaKeyWords } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Haroun Achouche Portfolio</title>
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg" />
    <meta name="description" content={metaDescription} />
    <meta name="keywords" content={metaKeyWords} />
    <!-- Google Search Verification -->
    <meta
      name="google-site-verification"
      content="Amwbrym6ZnvrBN13LXGtYnvYW4JsJmJS0Tgnd0av2g8"
    />
    <!-- Google Analytics -->
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-4H0Y22DZQ1"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-4H0Y22DZQ1");
    </script>
    <!-- Pinterest Verification -->
    <meta name="p:domain_verify" content="ab57ae76b4053f945710fea74a3337ca" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/db5fbb90a7.js"
      crossorigin="anonymous"></script>
  </head>
  <body>
    <Header />
    <main id="content" class:list={[mainClass]}>
      <slot />
    </main>
    <footer class="page__footer footer">
      <p class="copyright-notice">Â© Copyright Haroun Achouche 2022</p>
    </footer>
    <BackButton />

    <!-- App.js -->
    <script src="../scripts/app.js"></script>
  </body>
</html>
